- page_size = 1000
.paging
  - page_count = (@group_count / page_size) + ((@group_count & page_size) > 0 ? 1 : 0)
  - (1..page_count).each do |i|
    - if @page == i
      span.page_link.active= i
    - else
      span.page_link= link_to i, page: i

